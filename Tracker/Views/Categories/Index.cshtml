@model IEnumerable<Tracker.Models.Category>


<a asp-action="CreateOrEdit" asp-route-id="0">Create</a>

<div class="row">
    <div class="col-md-7 category">
        <table class="table table-bordered dataTable" id="dataTable" width="100%" cellspacing="0" role="grid" aria-describedby="dataTable_info" ">
            <thead>
                <tr>
                    <!--<th style="text-decoration:none;">
                        Category
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Activity
                    </th>-->


                </tr>
                <tr role="row">
                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Category: activate to sort column descending" style="width: 50%;" aria-sort="ascending">Category</th>
                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Type: activate to sort column ascending" style="width: 30%;">Type</th>
                    <th class="activity">Activity</th>
                  </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TitleWithIcon)
                        </td>
                        <td>
                            @if (item.Type == "Income")
                            {
                                <span style="padding: 7px 15px;" class="badge bg-success">@Html.DisplayFor(modelItem => item.Type)</span>
                            }
                            @if (item.Type == "Expense")
                            {
                                <span style="padding: 7px 15px;" class="badge bg-danger">@Html.DisplayFor(modelItem => item.Type)</span>
                            }

                        </td>
                        <td>
                            <a class="btn-edit" href="/Categories/CreateOrEdit/@item.CategoryId">
                                <i class="fa-solid fa-pen"></i></a>
                            <!--a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a!-->
                            <form action="/Categories/Delete/@item.CategoryId" method="post">
                            @Html.AntiForgeryToken()
                                <button type="submit" class="btn-edit" onclick="return confirm(&quot;Are you shure you want to delete this record?&quot;)">
                                <i class="fa-solid fa-trash-can text-danger"></i>
                            </button>
                          
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-5 side-widget">
        <div class="widget-class side h-100 d-flex justify-content-center" style="background-color:#343548">
            <i class="fa-solid fa-shapes"></i>
        </div>
    </div>
</div>



